<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF7FF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResultScreenFragment">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/arrow_back_ios_24"
        android:contentDescription="Back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Result"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bolditalic"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/ivBack"
        app:layout_constraintTop_toBottomOf="@id/separator"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputChooseSession"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#ECEBEB"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/separator">
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:text="Choose Session"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnHalfYearly"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:text="Half Yearly"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputChooseSession"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_regular"
        android:background="@drawable/blue_btn_bg"/>

    <Button
        android:id="@+id/btnFinalYearly"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:text="Final Year"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHalfYearly"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_regular"
        android:background="@drawable/blue_btn_bg"/>


</androidx.constraintlayout.widget.ConstraintLayout>